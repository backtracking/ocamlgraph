;; rules for the dot test

(rule
 (deps dot.dot)
 (action
  (with-stdout-to
   dot.output
   (run ./dot.exe %{deps}))))

(rule
 (alias runtest)
 (action
  (progn
   (diff dot.expected dot.output)
   (echo "dot: all tests succeeded.\n"))))

(executable
 (name dot)
 (modules dot)
 (libraries graph))

;; rules for the running the benchmark

(rule
 (alias bench)
 (action
  (run ./bench.exe)))

(executable
 (name bench)
 (modules bench)
 (libraries graph unix))
