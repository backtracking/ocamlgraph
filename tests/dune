;; Rules for the Bellman-Ford tests

(rule
 (with-stdout-to
  test_bf.output
  (run ./test_bf.exe)))

(rule
 (alias runtest)
 (action
  (progn
   (diff test_bf.expected test_bf.output)
   (echo "test_bf: all tests succeeded.\n"))))

(executable
 (name test_bf)
 (modules test_bf)
 (libraries graph))

